generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model UserConferenceLogs {
  id           String   @id @default(uuid()) @map("_id")
  userId       String
  action       String
  conferenceId String
  trustCredit  Int
  timestamp    DateTime @default(now())
}

model UserInteractLogs {
  id          String   @id @default(uuid()) @map("_id")
  userId      String
  action      String
  content     String
  trustCredit Int
  timestamp   DateTime @default(now())
}
